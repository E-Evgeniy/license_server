<div class = 'box'>
<h2 class = 'box_header'><%= t('.log_in')%></h2>
<div class = 'box_form'>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label t('.first_name'), class: 'field_description' %><br />
    <%= f.text_field :first_name, class: 'field_name' %>

  <div class="field_description">
    <%= f.label t('.password'), class: 'field' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'field_name' %>
   </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t('.remember_me') %>
    </div>
  <% end %>
  <%= button_to t('.new_session'), new_user_session_path, method: :post, class:"log_in_button", params: { lang: I18n.locale } %>
<% end %>
</div>
</div>